#:kivy 1.10.1
<Test>:

    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    tab_pos: 'left_top'
    tab_height: 64
    TabbedPanelItem:
        text: ''
        size:.5,.5
        canvas:
            Rectangle:
                source: 'Resources/drumstick.png'
                size: 64,64
                pos: self.pos
        Label:
            text: 'First tab content area'
    TabbedPanelItem:
        text: 'tab2'
        BoxLayout:
            Label:
                text: 'Second tab content area'
            Button:
                text: 'Button that does nothing'
                on_press: root.openMemory()
    TabbedPanelItem:
        text: 'tab3'
        RstDocument:
            text:
                '\n'.join(("Hello world", "-----------",
                "You are in the third tab."))